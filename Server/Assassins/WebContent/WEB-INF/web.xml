<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    version="3.0">

    <display-name>Assassins Server Apps</display-name>
    <description>
	This is a simple web application with a source code organization
	based on the recommendations of the Application Developer's Guide.
    </description>

    <servlet>
        <servlet-name>CreateAccount</servlet-name>
        <servlet-class>assassins.CreateAccount</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CreateAccount</servlet-name>
        <url-pattern>/CreateAccountBasic</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>assassins.Login</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/LoginBasic</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ImageUploadTest</servlet-name>
        <servlet-class>assassins.ImageUploadTest</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ImageUploadTest</servlet-name>
        <url-pattern>/ImageUploadTest</url-pattern>
    </servlet-mapping>

</web-app>
