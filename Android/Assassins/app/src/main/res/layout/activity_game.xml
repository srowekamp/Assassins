<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="la_05.com.assassins.GameActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_gallery"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="5dp"
        android:id="@+id/GamerPicture"/>

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/Gamertag"/>

    <TextView
        android:text="Players Left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="51dp"
        android:id="@+id/PlayersLeft"/>

    <TextView
        android:text="Time Remaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginStart="5dp"
        android:id="@+id/TimeRemaining" />

    <TextView
        android:text="TARGET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/Target" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_below="@+id/Target"
        android:layout_alignEnd="@+id/Target"
        android:layout_alignStart="@+id/Target"
        android:id="@+id/TargetImage" />

    <Button
        android:text="Assassinate!"
        android:textSize="18dp"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:id="@+id/AssassinateButton"
        android:onClick="assassinate"
        android:layout_above="@+id/PlayersLeft"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_gallery"
        android:id="@+id/perk1"
        android:layout_marginBottom="22dp"
        android:layout_above="@+id/AssassinateButton"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_gallery"
        android:id="@+id/perk2"
        android:layout_alignTop="@+id/perk3"
        android:layout_toEndOf="@+id/perk1"
        android:layout_marginStart="9dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_gallery"
        android:id="@+id/weapon2"
        android:layout_alignTop="@+id/weapon1"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_gallery"
        android:id="@+id/perk3"
        android:layout_marginStart="8dp"
        android:layout_alignTop="@+id/weapon1"
        android:layout_toEndOf="@+id/perk2" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_gallery"
        android:id="@+id/weapon1"
        android:layout_alignTop="@+id/perk1"
        android:layout_toStartOf="@+id/weapon2"
        android:layout_marginEnd="7dp" />

    <TextView
        android:text="Weapons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weapons"
        android:layout_above="@+id/weapon2"
        android:layout_toStartOf="@+id/weapon2"
        android:layout_marginBottom="7dp" />

    <TextView
        android:text="Perks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:id="@+id/perks"
        android:layout_alignBaseline="@+id/weapons"
        android:layout_alignBottom="@+id/weapons"
        android:layout_toEndOf="@+id/Gamertag" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/compass"
        android:id="@+id/targetCompass"
        android:layout_below="@+id/Score"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Score"
        android:layout_below="@+id/TargetImage"
        android:layout_alignStart="@+id/TimeRemaining" />


</RelativeLayout>
