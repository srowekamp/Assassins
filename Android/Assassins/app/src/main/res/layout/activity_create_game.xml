<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="la_05.com.assassins.CreateGameActivity">

    <Switch
        android:hint="PrivateGame"
        android:text="Private Game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switchPrivate"
        android:layout_marginStart="24dp"
        android:layout_below="@+id/switchMod"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <EditText
        android:hint="NumPlayers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:layout_marginStart="25dp"
        android:layout_marginTop="76dp"
        android:id="@+id/editTextPlayers"
        android:text="Number of Players"
        android:layout_below="@+id/editText"
        android:layout_alignStart="@+id/switchMod" />

    <EditText
        android:hint="GameID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="GameId"
        android:ems="10"
        android:layout_alignStart="@+id/editTextPlayers"
        android:layout_marginTop="14dp"
        android:id="@+id/editText" />

    <Switch
        android:hint="Mod"
        android:text="Moderator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="97dp"
        android:id="@+id/switchMod"
        android:layout_below="@+id/editTextSize"
        android:layout_alignStart="@+id/switchPrivate" />

    <EditText
        android:hint="SizeGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:layout_marginTop="39dp"
        android:id="@+id/editTextSize"
        android:text="Size of Game"
        android:layout_below="@+id/editTextPlayers"
        android:layout_alignStart="@+id/editTextPlayers" />

    <EditText
        android:hint="LengthGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/Length"
        android:text="Length of Game"
        android:layout_below="@+id/editTextSize"
        android:layout_alignStart="@+id/editTextSize"
        android:layout_marginTop="32dp" />

    <Button
        android:text="Create Game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        android:id="@+id/button2"
        android:onClick="CreateGame"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/switchPrivate" />

    <Button
        android:text="Main Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonMain"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:onClick="SwitchToMainMenu"/>

</RelativeLayout>
